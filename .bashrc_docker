# .bashrc customizado para o container Docker ROS2

# Se n√£o estiver rodando interativamente, n√£o fazer nada
[ -z "$PS1" ] && return

# Source do ROS2 Humble
if [ -f /opt/ros/humble/setup.bash ]; then
    source /opt/ros/humble/setup.bash
fi

# Source do workspace local (se existir)
if [ -f /root/ros2_workspace/install/setup.bash ]; then
    source /root/ros2_workspace/install/setup.bash
fi

# Mudar para o workspace por padr√£o
cd /root/ros2_workspace

# Aliases √∫teis
alias build='colcon build'
alias build-this='colcon build --packages-select'
alias source-this='source install/setup.bash'
alias clean='rm -rf build install log'
alias rebuild='clean && build'

# Fun√ß√£o para verificar ambiente ROS2
ros2-check() {
    echo "ROS_DISTRO: $ROS_DISTRO"
    echo "ROS_VERSION: $ROS_VERSION"
    echo "ROS_PYTHON_VERSION: $ROS_PYTHON_VERSION"
    ros2 pkg list | head -5
}

# Mensagem de boas-vindas
echo "üê≥ Container ROS2 Humble pronto!"
echo "üìÅ Workspace: /root/ros2_workspace"
echo "üí° Comandos √∫teis: build, build-this <pkg>, source-this, clean, rebuild, ros2-check"
